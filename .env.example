# VoiceOS Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# Debug Mode
# =============================================================================

# Set to "true" to enable enhanced debug logging in the browser console.
# This shows detailed logs for:
# - Speech recognition input
# - Vision keyword matching and routing decisions
# - LLM prompts and responses
# - JSON parsing of LLM output
# - Action execution routing
VITE_DEBUG=false

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# Provider to use: "gemini" (default), "ollama", or "openai"
LLM_PROVIDER=ollama

# Override default model (optional)
# - Gemini: gemini-1.5-flash, gemini-2.0-flash-exp, gemini-pro
# - Ollama: gemma3:4b, llama3, mistral, qwen3-coder:480b-cloud
LLM_MODEL=gemini-3-flash-preview

# =============================================================================
# Gemini (Google AI) - Default Provider
# =============================================================================

# Get your API key from: https://aistudio.google.com/
GEMINI_API_KEY=your-gemini-api-key-here

# =============================================================================
# Ollama Cloud or Local
# =============================================================================

# Get your API key from: https://ollama.com (for cloud)
# For local Ollama, the API key can be any string (e.g., "ollama")
OLLAMA_API_KEY=your-ollama-api-key-here

# Ollama API endpoint
# - Cloud: https://ollama.com/v1 (default)
# - Local: http://localhost:11434/v1 (run `ollama serve` first)
OLLAMA_BASE_URL=https://ollama.com/v1

# =============================================================================
# Logging Configuration
# =============================================================================

# Frontend log level: debug, info, warn, error (default: info)
VITE_LOG_LEVEL=debug

# Backend log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
LOG_LEVEL=INFO

# Log directory for file rotation (default: ./logs)
LOG_DIR=./logs

# =============================================================================
# Analytics Configuration
# =============================================================================

# Enable usage analytics collection (default: false)
# Tracks: utterance → intent → action → outcome for self-improvement
VITE_ANALYTICS_ENABLED=true
